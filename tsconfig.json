{
  "include": [
    "@types/**/*",
    "src/**/*",
    "__tests__/**/*",
    "__mocks__/**/*",
    "coconfig.ts",
    "vitest.config.ts",
    "tsup.config.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "lib": [
      "ES2022",
      "DOM"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2019",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./build",
    "incremental": true,
    "isolatedModules": true,
    "strict": true,
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  }
}